@{
    ViewData["Title"] = "ItemList";
}

<div class="shadow-all-sides p-3 d-flex flex-column align-items-center gap-3">

    <div class="d-flex justify-content-between w-100">
        <div class="d-flex gap-2">
            <i class="fs-6 bi-wallet2"></i> 
                Item
        </div>

        <i class="fs-5 bi-fullscreen"></i> 
    </div>

    <div class="d-flex flex-row justify-content-between w-100">
        <button class="bg-success text-white h-100 py-2 px-4 rounded" id="openAddItemModal" style="border: none">
        <i class="fs-6 bi-plus"></i> 
            Add New Item
        </button>

        <div class="d-flex flex-row">
            <input type="text" class="form-control" style="width: 300px;" required/>
            <button class="border bg-white">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
    

    <table class="table table-striped" style="width: 100%; table-layout: fixed;">
        <thead class="table-dark">
            <tr>
                <th class="font-small" scope="col" style="width: 40px;">#</th>
                <th class="font-small" scope="col" style="width: 150px;">TITLE</th>
                <th class="font-small text-center" scope="col">TYPE</th>
                <th class="font-small text-center" scope="col">POS ITEM</th>
                <th class="font-small text-center" scope="col">REORDER</th>
                <th class="font-small text-center" scope="col">DELIVER</th>
                <th class="font-small text-center" scope="col">PICK-UP</th>
                <th class="font-small text-center" scope="col">BUY</th>
                <th class="font-small text-center" scope="col">DATE</th>
                <th class="font-small text-center" scope="col">ACTION</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="font-small" scope="row">1</td>
                <td class="font-small" scope="row">5 Gallon Slim</td>
                <td class="font-small text-center">Container</td>
                <td class="font-small text-center">
                    <div class="bg-success text-white px-2 d-inline rounded-pill">Yes</div>
                </td>
                <td class="font-small text-center">100</td>
                <td class="font-small text-center">P 20.00</td>
                <td class="font-small text-center">P 15.00</td>
                <td class="font-small text-center">P 150.00</td>
                <td class="font-small text-center">Aug 20, 2019</td>
                <td class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-gear"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="dropdown-item" id="openEditItemModal">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </div>
                            </li>
                            <li>
                                <div class="dropdown-item" id="openDeleteItemModal">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </div>
                            </li>

                        </ul>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>  

    <nav aria-label="Pagination">
        <ul class="pagination">
            <li class="page-item ">
                <a class="page-link" 
                    href="/Search?page=1&window=1&search=John&gender=Male">
                    Previous
                </a>
            </li>

            <li class="page-item">
                <a class="page-link" href="/Search?page=6&window=2&search=John&gender=Male">6</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="/Search?page=7&window=2&search=John&gender=Male">7</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/Search?page=8&window=2&search=John&gender=Male">8</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/Search?page=9&window=2&search=John&gender=Male">9</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/Search?page=10&window=2&search=John&gender=Male">10</a>
            </li>

            <li class="page-item">
                <a class="page-link" 
                    href="/Search?page=11&window=3&search=John&gender=Male">
                    Next
                </a>
            </li>
        </ul>
    </nav>
    
</div>



<div id="addItemContainer"></div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById("openAddItemModal");
        const container = document.getElementById("addItemContainer");

        button.addEventListener("click", function (){
            fetch("/ItemList/AddItem")
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                    const modal = document.getElementById("addItemModal");
                    if(modal) {
                        const modalInstance = new bootstrap.Modal(modal);
                        modalInstance.show();
                    }
                })
                .catch(error => {
                    console.error("Error loading modal:", error);
                });
             });
         });
</script>


