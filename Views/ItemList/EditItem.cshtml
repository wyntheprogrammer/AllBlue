@{
    Layout = null;
}

@model AllBlue.Models.Item

<!-- Edit Item Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addForm" asp-action="EditItem" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addItemModalLabel">Edit Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">
                    <input type="hidden" asp-for="Item_ID" />

                    <div class="d-flex flex-column gap-2 p-2" style="width: 68%">
                        <div class="form-group w-100">
                            <label asp-for="Title" class="fw-bold">Title</label>
                            <input type="text" asp-for="Title" class="form-control" required/>
                        </div>

                        <div class="d-flex flex-row gap-2">
                           <div class="w-100">
                                <label asp-for="Item_Type" class="form-label fw-bold">Type</label>
                                <select asp-for="Item_Type" class="form-select" required>
                                    <option value="Container">Container</option>
                                    <option value="Bottle">Bottle</option>
                                    <option value="Seal">Seal</option>
                                    <option value="Filter">Filter</option>
                                    <option value="Packaging">Packaging</option>
                                    <option value="Equipment">Equipment</option>
                                    <option value="Bills">Bills</option>
                                    <option value="Other Expenses">Other Expenses</option>
                                </select>
                            </div>

                            <div class="w-100">
                                <label asp-for="POS_Item" class="form-label fw-bold">POS Item?</label>
                                <select asp-for="POS_Item" class="form-select" required>
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                            <div class="w-100">
                                <label asp-for="Reorder" class="form-label fw-bold">Reorder Level</label>
                                <input asp-for="Reorder" class="form-control" required />
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-2">
                            <div class="form-group w-100">
                                <label asp-for="Deliver" class="fw-bold">Deliver</label>
                                <input asp-for="Deliver" type="text" class="form-control" required/>
                            </div>
                            <div class="form-group w-100">
                                <label asp-for="Pickup" class="fw-bold">Pick-Up</label>
                                <input asp-for="Pickup" type="text" class="form-control" required/>
                            </div>
                            <div class="form-group w-100">
                                <label asp-for="Buy" class="fw-bold">Buy</label>
                                <input asp-for="Buy" type="text" class="form-control" required/>
                            </div>
                        </div>


                        <div class="d-flex flex-column">
                            <label asp-for="Description" class="fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control">
                            </textarea>
                        </div>
                        
                    </div>

                    <div class="d-flex flex-column gap-4 p-2" style="width: 30%;">
                        <div class="d-flex flex-column align-items-center">
                            <label for="">Preview</label>
                            <div class="border" style="width: 150px; height: 150px; background-color: #dee2e6;"> 
                            </div>
                        </div>

                        <input type="file" name="Image" class="form-control"/>

                        <div class="w-100 d-flex justify-content-center gap-2 text-white">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i>
                                Save
                            </button>
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                                <i class="bi bi-x"></i>
                                Close
                            </button>
                        </div>

                    </div>

                </div>
                
                <div class="modal-footer">
                </div>

            </form>
        </div>
    </div>
</div>
