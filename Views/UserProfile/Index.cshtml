@{
    ViewData["Title"] = "User Profile";
}

<div class="shadow-all-sides p-3 d-flex flex-column gap-1">
    <div class="d-flex justify-content-between border-bottom pb-2">
        <div class="d-flex gap-2">
            <i class="fs-6 bi-person-fill"></i> 
            User Profile Information
        </div>

        <i class="fs-5 bi-fullscreen"></i> 
    </div>

    <div class="d-flex flex-row justify-content-between p-2">

        <div class="d-flex flex-column" style="width: 80%">
            <div class="d-flex flex-row gap-2 p-2">
                <div class="form-group w-100">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" required/>
                </div>

                <div class="form-group w-100">
                    <label class="form-label">Middle Name</label>
                    <input type="text" class="form-control" required/>
                </div>

                <div class="form-group w-100">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>

            <div class="d-flex flex-row gap-2 p-2">
                <div class="form-group w-100">
                    <label class="form-label">Contact</label>
                    <input type="text" class="form-control" required/>
                </div>

                <div class="form-group w-100">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" required/>
                </div>

                <div class="form-group w-100">
                    <label class="form-label">Gender</label>
                    <select  class="form-select" required>
                        <option value=""></option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>

            <div class="d-flex flex-row gap-2 p-2">
                <div class="form-group flex-grow-2">
                    <label class="form-label">Account Type</label>
                    <select  class="form-select" required>
                        <option value=""></option>
                        <option value="POS User">Barangay 1</option>
                        <option value="Barangay 2">Barangay 2</option>
                    </select>
                </div>

                <div class="form-group flex-grow-1">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>
        </div>

        <div class=" d-flex flex-column align-items-center justify-content-center gap-2" style="width: 20%">
            <div style="background-color: #dee2e6; width: 100px; height: 100px;"></div>
            <input type="file" class="form-control" style="width: 200px;">

            <button class="bg-primary text-white rounded w-auto p-2" style="border: none; height: fit-content">
                <i class="fs-6 bi-check me-1"></i>
                Save Changes
            </button>
        </div>
        
    </div>

    <div class="d-flex border-bottom pb-2 gap-1">
        <i class="fs-6 bi-shield-lock"></i>
        <span>Change Password</span> 
    </div>

    <div class="d-flex flex-row justify-content-between p-2">
        <div class="d-flex flex-row gap-2 p-2" style="width: 80%">
            <div class="form-group w-100">
                <label class="form-label">User Name</label>
                <input type="text" class="form-control" required/>
            </div>

            <div class="form-group w-100">
                <label class="form-label">New Password</label>
                <input type="text" class="form-control" required/>
            </div>

            <div class="form-group w-100">
                <label class="form-label">Re-type Password</label>
                <input type="text" class="form-control" required/>
            </div>
        </div>

        <div class=" d-flex flex-column align-items-center justify-content-center gap-2" style="width: 20%">
            <button class="bg-primary text-white rounded w-auto p-2" style="border: none; height: fit-content">
                <i class="fs-6 bi-shield-lock me-1"></i>
                Save Changes
            </button>
        </div>

    </div>

</div>



<div id="actionHistoryContainer"></div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById("openActionHistoryModal");
        const container = document.getElementById("actionHistoryContainer");

        button.addEventListener("click", function (){
            fetch("/Monitoring/GallonActionHistory")
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                    const modal = document.getElementById("actionHistoryModal");
                    if(modal) {
                        const modalInstance = new bootstrap.Modal(modal);
                        modalInstance.show();
                    }
                })
                .catch(error => {
                    console.error("Error loading modal:", error);
                });
             });
         });
</script>


