@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex gap-4">

    <div class="d-flex bg-primary flex-grow-1 shadow-all-sides">
        <div class="d-flex justify-content-between p-4 w-100 text-white">
            <div class="d-flex flex-column justify-content-center align-items-center h-100">
                <div class="fs-5"> 
                    100.00
                </div>
                <div class="font-small">
                    SALES
                </div>
            </div>
            <div>
                <i class="bi-currency-dollar"></i> 
            </div>
        </div>
    </div>

    <div class="d-flex bg-danger flex-grow-1 shadow-all-sides">
        <div class="d-flex justify-content-between p-4 w-100 text-white">
            <div class="d-flex flex-column justify-content-center align-items-center h-100">
                <div class="fs-5"> 
                    100.00
                </div>
