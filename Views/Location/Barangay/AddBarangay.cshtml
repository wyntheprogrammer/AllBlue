@{
    Layout = null;
};

@model AllBlue.Models.Barangay

<!-- Add Barangay Modal -->
<div class="modal fade" id="addBarangayModal" tabindex="-1" aria-labelledby="addBarangayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addForm" asp-controller="Location" asp-action="AddBarangay" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBarangayModalLabel">Add Barangay</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row  p-2 gap-2">
                    <div class="form-group flex-grow-1">
                        <label asp-for="City_ID" class="form-label">City</label>
                        <select asp-for="City_ID" class="form-select" asp-items="ViewBag.CityList" required>
                            <option value=""></option>
                        </select>
                    </div>

                    <div class="form-group flex-grow-1">
                        <label asp-for="Name" class="form-label">Barangay</label>
                        <input type="text" asp-for="Name" class="form-control" required/>
                    </div>

                    <div class="form-group flex-grow-1">
                        <label asp-for="Color" class="form-label">Pick Color Code</label>
                        <input type="color" asp-for="Color" class="form-control" required/>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-end gap-2 text-white">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i>
                            Save
                        </button>
                        <button type="close" class="btn btn-danger">
                            <i class="bi bi-x"></i>
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
