@{
    ViewData["Title"] = "Expenses";
}

@model List<ExpenseMonthlyViewModel>

<div class="shadow-all-sides p-3 d-flex flex-column align-items-center gap-3">
    <div class="d-flex justify-content-between w-100">
        <div class="d-flex gap-2">
            <a class="d-flex gap-2 px-3 align-items-center bg-white text-decoration-none text-black" 
                asp-controller="Stock" asp-action="Stock">
                <i class="fs-6 bi-cash-stack"></i> 
                Stock
            </a>
            <a class="d-flex gap-2 px-3 align-items-center bg-white text-decoration-none text-black" 
                asp-controller="Stock" asp-action="Expenses"
                style="border:none; border-bottom: 2px solid #0d6efd">
                <i class="fs-6 bi-wallet2"></i> 
                Expenses
            </a>
        </div>

        <div class="d-flex gap-3">
            <i class="fs-5 bi-printer"></i> 
            <i class="fs-5 bi-arrow-clockwise"></i> 
            <i class="fs-5 bi-fullscreen"></i> 
        </div>
    </div>

    @if(TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show w-100 m-0" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if(TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show w-100 m-0" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <div class="d-flex flex-row align-items-center gap-2  w-100 font-small">

        <button class="btn btn-success text-center p-2" id="openExpensesModal"> 
            <i class="fs-6 bi-plus"></i>
            Add Expenses
        </button>

        <span class="flex-grow-1 text-center fw-bold">
            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(ViewBag.SelectedMonth)
            Expenses: P @ViewBag.MonthlyTotal
        </span>
        <span class="flex-grow-1 text-center fw-bold">
            @ViewBag.SeletedYear Expenses: P @ViewBag.YearlyTotal
        </span>
       
       
        <form method="get" asp-controller="Stock" asp-action="Expenses" id="filterForm" 
             class="d-flex flex-row align-items-center gap-2  w-50 font-small">

            <div class="form-group flex-grow-1">
                <label class="fw-bold">Month</label>
                <select id="monthSelect" name="month" class="form-select" >
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>

            <div class="form-group flex-grow-1">
                <label class="fw-bold">Year</label>
                <select id="yearSelect" name="year" class="form-select">
                </select>
            </div>
            
        </form>
        
    </div>

    <table class="table table-striped" style="width: 100%; table-layout: fixed;">
        <thead class="table-dark">
            <tr>
                <th class="font-extra-small" scope="col" style="width: 40px;">#</th>
                <th class="font-extra-small" scope="col" style="width: 150px;">ITEM</th>
                <th class="font-extra-small text-center" scope="col">JAN</th>
                <th class="font-extra-small text-center" scope="col">FEB</th>
                <th class="font-extra-small text-center" scope="col">MAR</th>
                <th class="font-extra-small text-center" scope="col">APR</th>
                <th class="font-extra-small text-center" scope="col">MAY</th>
                <th class="font-extra-small text-center" scope="col">JUN</th>
                <th class="font-extra-small text-center" scope="col">JUL</th>
                <th class="font-extra-small text-center" scope="col">AUG</th>
                <th class="font-extra-small text-center" scope="col">SEP</th>
                <th class="font-extra-small text-center" scope="col">OCT</th>
                <th class="font-extra-small text-center" scope="col">NOV</th>
                <th class="font-extra-small text-center" scope="col">DEC</th>
                <th class="font-extra-small text-center" scope="col">YEARLY</th>
                <th class="font-extra-small text-center" scope="col">ACTION</th>
            </tr>
        </thead>
        <tbody>
        @if (Model !=null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="font-small " scope="row">@item.ExpenseCategoryID</td>
                    <td class="font-small" scope="row">@item.CategoryName</td>
                    <td class="font-small text-center">@item.Jan.ToString("N2")</td>
                    <td class="font-small text-center">@item.Feb.ToString("N2")</td>
                    <td class="font-small text-center">@item.Mar.ToString("N2")</td>
                    <td class="font-small text-center">@item.Apr.ToString("N2")</td>
                    <td class="font-small text-center">@item.May.ToString("N2")</td>
                    <td class="font-small text-center">@item.Jun.ToString("N2")</td>
                    <td class="font-small text-center">@item.Jul.ToString("N2")</td>
                    <td class="font-small text-center">@item.Aug.ToString("N2")</td>
                    <td class="font-small text-center">@item.Sep.ToString("N2")</td>
                    <td class="font-small text-center">@item.Oct.ToString("N2")</td>
                    <td class="font-small text-center">@item.Nov.ToString("N2")</td>
                    <td class="font-small text-center">@item.Dec.ToString("N2")</td>
                    <td class="font-small text-center">@item.YearlyTotal.ToString("N2")</td>
                    <td class="text-center ">
                        <div class="dropdown">
                            <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="font-small bi-gear"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="dropdown-item openExpensesHistoryModal"
                                        data-id="@item.ExpenseCategoryID">
                                        <i class="bi bi-clock-history"></i> History
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </td>
                </tr>
            }
        } else 
        {
            <tr>
                <td colspan="16" class="text-center text-muted">No Item Found.</td>
            </tr>
        }
        </tbody>
    </table>  

    <nav aria-label="Pagination">
        <ul class="pagination">
            <li class="page-item @(ViewBag.Window == 1 ? "disabled" : "")">
                <a class="page-link"
                    asp-action="Index"
                    asp-route-page="@((ViewBag.StartPage - 5) > 0 ? ViewBag.StartPage - 5 : 1)"
                    asp-route-window="@(ViewBag.Window - 1)"
                    asp-route-search="@ViewBag.Search">
                    Previous
                </a>
            </li>

            @for (int i = ViewBag.StartPage; i <= ViewBag.EndPage; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class= "page-link"
                        asp-action="Index"
                        asp-route-page="@i"
                        asp-route-window="@ViewBag.Window"
                        asp-route-search="@ViewBag.Search">
                        @i
                    </a>
                </li>
            }
        
            <li class="page-item @(ViewBag.EndPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" 
                    asp-action="Index"
                    asp-route-page ="@((ViewBag.EndPage + 1) <= ViewBag.TotalPages ? ViewBag.EndPage + 1 : ViewBag.TotalPages)"
                    asp-route-window = "@(ViewBag.Window + 1)"
                    asp-route-search="@ViewBag.Search">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>



<div id="addExpensesContainer"></div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById("openExpensesModal");
        const container = document.getElementById("addExpensesContainer");

        button.addEventListener("click", function (){
            fetch("/Stock/AddExpenses")
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                    const modal = document.getElementById("addExpensesModal");
                    if(modal) {
                        const modalInstance = new bootstrap.Modal(modal);
                        modalInstance.show();
                    }
                })
                .catch(error => {
                    console.error("Error loading modal:", error);
                });
             });
         });
</script>


<div id="expensesHistoryContainer"></div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.querySelectorAll(".openExpensesHistoryModal");
        const container = document.getElementById("expensesHistoryContainer");

        button.forEach(button => {
            button.addEventListener("click", function (){
            const historyId = this.getAttribute("data-id");
             
            fetch(`/Stock/ExpensesHistory?id=${historyId}`)
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                    const modal = document.getElementById("expensesHistoryModal");
                    if(modal) {
                        const modalInstance = new bootstrap.Modal(modal);
                        modalInstance.show();
                    }
                })
                .catch(error => {
                    console.error("Error loading modal:", error);
                });
             });
        });
    });
</script>


<script>
    // Auto-generate year options
    const startYear = 2019;
    const currentYear = new Date().getFullYear();
    const yearSelect = document.getElementById("yearSelect");

    for (let y = startYear; y <= currentYear; y++) {
        let opt = document.createElement("option");
        opt.value = y;
        opt.textContent = y;
        yearSelect.appendChild(opt);
    }

    // Auto-submit form on change
    document.getElementById("monthSelect").addEventListener("change", function () {
        document.getElementById("filterForm").submit();
    });

    document.getElementById("yearSelect").addEventListener("change", function () {
        document.getElementById("filterForm").submit();
    });

    // Preselect month/year from ViewBag values
    document.getElementById("monthSelect").value = "@ViewBag.SelectedMonth";
    yearSelect.value = "@ViewBag.SelectedYear";
</script>


