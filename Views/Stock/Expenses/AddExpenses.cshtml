@{
    Layout = null;
};


<!-- Action History Modal -->
<div class="modal fade" id="addExpensesModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addForm" asp-action="AddCustomer" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Input Expenses</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">

                    <div class="d-flex flex-column gap-2 p-2" style="width: 68%">
                        <select  class="form-select" required>
                            <option value="">Select expenses</option>
                            <option value="Male">RHU -Water Test Laboratory</option>
                            <option value="Female">Cenpelde</option>
                            <option value="Female">Man Power</option>
                            <option value="Female">Gasoline</option>
                        </select>

                        <div class="d-flex flex-row gap-2">
                            <div class="form-group flex-grow-1">
                                <label class="fw-bold">Total Value</label>
                                <input type="text" class="form-control" required/>
                            </div>
                            <div class="form-group flex-grow-1">
                                <label class="fw-bold">Date</label>
                                <input type="date" class="form-control" required/>
                            </div>

                        </div>

                        <div class="d-flex flex-column">
                            <label class="fw-bold">Comment</label>
                            <textarea class="form-control">
                            </textarea>
                        </div>
                        
                    </div>

                    <div class="d-flex flex-column gap-4 p-2" style="width: 30%;">
                        <div class="d-flex flex-column align-items-center">
                            <label for="">Preview</label>
                            <div class="border" style="width: 150px; height: 150px; background-color: #dee2e6;"> 
                            </div>
                        </div>

                        <div class="w-100 gap-2 text-white">
                            <div class="bg-success text-center p-2 d-inline-block">
                                <i class="bi bi-check-lg"></i>
                                Save Expenses
                            </div>
                            <div class="bg-danger text-center p-2 d-inline-block">
                                <i class="bi bi-x"></i>
                                Close
                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                </div>

            </form>
        </div>
    </div>
</div>
