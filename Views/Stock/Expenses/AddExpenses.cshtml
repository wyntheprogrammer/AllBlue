@{
    Layout = null;
};


<!-- Action History Modal -->
<div class="modal fade" id="addExpensesModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Stock" asp-action="AddExpenses" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Input Expenses</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">

                    <div class="d-flex flex-column gap-2 p-2" style="width: 68%">
                        <select name="ExpenseCategoryID"  class="form-select" required>
                            <option value="">Select expenses</option>
                            <option value="1">RHU -Water Test Laboratory</option>
                            <option value="2">Cenpelde</option>
                            <option value="3">Man Power</option>
                            <option value="4">Gasoline</option>
                        </select>

                        <div class="d-flex flex-row gap-2">
                            <div class="form-group flex-grow-1">
                                <label for="TotalValue" class="fw-bold">Total Value</label>
                                <input type="text" name="TotalValue" class="form-control" required/>
                            </div>
                            <div class="form-group flex-grow-1">
                                <label for="Date" class="fw-bold">Date</label>
                                <input type="date" name="Date" class="form-control" required/>
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="Comment" class="fw-bold">Comment</label>
                            <textarea name="Comment" class="form-control">
                            </textarea>
                        </div>
                        
                    </div>

                    <div class="d-flex flex-column gap-4 p-2" style="width: 30%;">
                        <div class="d-flex flex-column align-items-center">
                            <label for="">Preview</label>
                            <div class="border" style="width: 150px; height: 150px; background-color: #dee2e6;"> 
                            </div>
                        </div>

                        <div class="w-100 gap-2 text-white">
                            <button class="btn btn-success text-center p-2">
                                <i class="bi bi-check-lg"></i>
                                Save Expenses
                            </button>
                            <button class="btn btn-danger text-center p-2">
                                <i class="bi bi-x"></i>
                                Close
                            </button>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                </div>

            </form>
        </div>
    </div>
</div>
