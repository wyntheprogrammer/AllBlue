@{
    Layout = null;
};


<!-- Confirm Payment Modal -->
<div class="modal fade" id="actionPayModal" tabindex="-1" aria-labelledby="actionPayModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirm Credit Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body d-flex flex-column align-items-center p-2 gap-2">  

                <div class="d-flex flex-column p-2" style="width: 80%;">

                    <div class="d-flex flex-row justify-content-between w-100 text-white p-2 fw-bold bg-primary">
                        <div>
                            <i class="fs-5 bi-person"></i>
                            <span class="fs-5">JUAN DELA CRUZ</span>
                        </div>
                        
                        <input type="date" class="border"/>
                    </div>

                    <div class="d-flex flex-row w-100  text-danger fw-bold" style="background-color: #f8d7da;">
                        <span class="w-50 d-flex justify-content-end align-items-center px-4">CREDIT TOTAL</span>
                        <span class="w-50 d-flex justify-content-end fs-3">P 1,425.00</span>
                    </div>

                    <div class="d-flex flex-column gap-2 p-2 text-warning" style="background-color: #fff3cd;">
                   
                        <div class="d-flex flex-row w-100">
                            <span class="w-50 d-flex justify-content-end align-items-center px-4 text-success">Cash</span>
                            <span class="w-50 d-flex justify-content-end align-items-center"><input type="number" class="w-100" /></span>
                        </div>
                        <div class="d-flex flex-row w-100">
                            <span class="w-50 d-flex justify-content-end align-items-center px-4 text-success">Credit</span>
                            <span class="w-50 d-flex justify-content-end align-items-center"><input type="number" class="w-100" /></span>
                        </div>

                    </div>

                </div>


               

            </div>

            <div class="modal-footer">
                 <button class="bg-success text-white p-2 rounded" style="border: none">
                    <i class="font-small bi-send"></i> 
                    Submit Payment
                </button>
            </div>
            
        </div>
    </div>
</div>
