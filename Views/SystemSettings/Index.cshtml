@{
    ViewData["Title"] = "System Settings";
}

<div class="shadow-all-sides p-3 d-flex flex-column gap-3">
    <div class="d-flex justify-content-between border-bottom pb-2">
        <div class="d-flex gap-2">
            <i class="fs-6 bi-gear"></i> 
            System Settings
        </div>

        <i class="fs-5 bi-fullscreen"></i> 
    </div>

    <div class="d-flex flex-row gap-4 w-100">

        <div class="d-flex flex-column align-items-center gap-2 p-2 border" style="width: 70%">

            <div class="form-group w-100">
                <label class="fw-bold">Title</label>
                <input type="text" class="form-control" required/>
            </div>

            <div class="d-flex gap-2 w-100">
                <div class="form-group w-100">
                    <label class="fw-bold">Footer</label>
                    <input type="text" class="form-control" required/>
                </div>
                <div class="form-group w-100">
                    <label class="fw-bold">System</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>

             <div class="d-flex gap-2 w-100">
                <div class="form-group w-100">
                    <label class="fw-bold">Contact 1</label>
                    <input type="text" class="form-control" required/>
                </div>
                <div class="form-group w-100">
                    <label class="fw-bold">Contact 2</label>
                    <input type="text" class="form-control" required/>
                </div>
                <div class="form-group w-100">
                    <label class="fw-bold">Contact 3</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>

            <div class="d-flex flex-row gap-2 w-100">
                <div class="form-group flex-grow-1">
                    <label class="fw-bold">Barangay</label>
                    <select  class="form-select" required>
                        <option value=""></option>
                        <option value="Barangay 1">Barangay 1</option>
                        <option value="Barangay 2">Barangay 2</option>
                    </select>
                </div>
                <div class="form-group flex-grow-1">
                    <label class="fw-bold">City</label>
                    <select  class="form-select" required>
                        <option value=""></option>
                        <option value="Barangay 1">Barangay 1</option>
                        <option value="Barangay 2">Barangay 2</option>
                    </select>
                </div>
                <div class="form-group flex-grow-1">
                    <label class="fw-bold">Province</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>


            <div class="d-flex gap-2 w-100">
                <div class="form-group">
                    <label class="fw-bold">Zip Code</label>
                    <input type="text" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label class="fw-bold">Country</label>
                    <input type="text" class="form-control" required/>
                </div>
            </div>

        </div>  

        <div class="p-2 border" style="width: 30%;">
            <div class="d-flex flex-column align-items-center border-bottom p-2 gap-1">
                <label class="fw-bold">Favicon</label>
                
                <div class="d-flex align-items-center gap-2 w-100">
                    <div style="background-color: #dee2e6; height: 50px; width: 50px; border-radius: 100px;">
                    </div>
                    <input type="file" class="form-control" style="width: 230px;">
                </div>
            </div>

            <div class="d-flex flex-column align-items-center border-bottom p-2 gap-1 w-100">
                <label class="fw-bold">Logo</label>
                <div class="d-flex align-items-center gap-2 w-100">
                    <div style="background-color: #dee2e6; height: 100px; width: 100px;">
                    </div>
                    <input type="file" class="form-control" style="width: 180px;">
                </div>
            </div>

            <div class="d-flex flex-column align-items-center border-bottom p-2 gap-1">
                <label class="fw-bold">Banner</label>
                <div style="background-color: #dee2e6; height: 50px; width: 200px;">
                </div>
                <input type="file" class="form-control" style="">
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-between align-items-center p-2 border w-100">
        <div class="d-flex gap-2 flex-grow-1">
            <div class="form-group">
                <label class="fw-bold">Delivery Interval (Days)</label>
                <input type="text" class="form-control" required/>
            </div>
            <div class="form-group">
                <label class="fw-bold">Local Address</label>
                <input type="text" class="form-control" required/>
            </div>
        </div>

        <button class="bg-primary text-white rounded w-auto p-2" style="border: none; height: fit-content">
            <i class="fs-6 bi-check me-1"></i>
            Upload Settings
        </button>

    </div>

</div>



<div id="actionHistoryContainer"></div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById("openActionHistoryModal");
        const container = document.getElementById("actionHistoryContainer");

        button.addEventListener("click", function (){
            fetch("/Monitoring/GallonActionHistory")
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                    const modal = document.getElementById("actionHistoryModal");
                    if(modal) {
                        const modalInstance = new bootstrap.Modal(modal);
                        modalInstance.show();
                    }
                })
                .catch(error => {
                    console.error("Error loading modal:", error);
                });
             });
         });
</script>


