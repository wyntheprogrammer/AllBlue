@{
    Layout = null;
}


<!-- Edit User Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="addForm" asp-action="AddCustomer" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Change User Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column justify-content-between gap-2 p-4">
                   <div class="form-group w-100">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" required/>
                    </div>

                    <div class="form-group w-100">
                        <label class="form-label">Re-type Password</label>
                        <input type="password" class="form-control" required/>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-end gap-2 text-white">
                        <div class="bg-success text-center p-2 d-inline-block">
                            <i class="bi bi-check-lg"></i>
                            Save
                        </div>
                        <div class="bg-danger text-center p-2 d-inline-block">
                            <i class="bi bi-x"></i>
                            Close
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
