@{
    Layout = null;
}


<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form id="addForm" asp-action="AddUser" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">

                    <div class="d-flex flex-column" style="width: 80%">
                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group w-100">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label class="form-label">Middle Name</label>
                                <input type="text" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" required/>
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group w-100">
                                <label class="form-label">Contact</label>
                                <input type="text" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label class="form-label">Email</label>
                                <input type="text" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label class="form-label">Gender</label>
                                <select  class="form-select" required>
                                    <option value=""></option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group flex-grow-2">
                                <label class="form-label">Account Type</label>
                                <select  class="form-select" required>
                                    <option value=""></option>
                                    <option value="POS User">Barangay 1</option>
                                    <option value="Barangay 2">Barangay 2</option>
                                </select>
                            </div>

                            <div class="form-group flex-grow-1">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" required/>
                            </div>
                        </div>
                    </div>

                    <div class=" d-flex flex-column align-items-center justify-content-center gap-2" style="width: 20%">
                        <div style="background-color: #dee2e6; width: 100px; height: 100px;"></div>
                        <input type="file" class="form-control" style="width: 200px;">
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-end gap-2 text-white">
                        <div class="bg-success text-center p-2 d-inline-block">
                            <i class="bi bi-check-lg"></i>
                            Update Changes
                        </div>
                        <div class="bg-danger text-center p-2 d-inline-block">
                            <i class="bi bi-x"></i>
                            Close
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
