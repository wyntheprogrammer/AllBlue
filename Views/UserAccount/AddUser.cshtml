@{
    Layout = null;
}

@model AllBlue.Models.UserAccount

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="UserAccount" asp-action="AddUser" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">

                    <div class="d-flex flex-column" style="width: 80%">
                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group w-100">
                                <label asp-for="Firstname" class="form-label">First Name</label>
                                <input type="text" asp-for="Firstname" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label asp-for="Middlename" class="form-label">Middle Name</label>
                                <input type="text" asp-for="Middlename" class="form-control"/>
                            </div>

                            <div class="form-group w-100">
                                <label asp-for="Lastname" class="form-label">Last Name</label>
                                <input type="text" asp-for="Lastname" class="form-control" required/>
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group w-100">
                                <label asp-for="Contact" class="form-label">Contact</label>
                                <input type="text" asp-for="Contact" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input type="text" asp-for="Email" class="form-control" required/>
                            </div>

                            <div class="form-group w-100">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select" required>
                                    <option value=""></option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex flex-row gap-2 p-2">
                            <div class="form-group flex-grow-1">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" type="text" class="form-control" required/>
                            </div>
                            <div class="form-group flex-grow-1">
                                <label asp-for="Account_Type_ID" class="form-label">Account Type</label>
                                <select asp-for="Account_Type_ID" asp-items="ViewBag.AccountTypeList" class="form-select" required>
                                    <option value=""></option>
                                </select>
                            </div>

                            <div class="form-group flex-grow-1">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input asp-for="Address" type="text" class="form-control" required/>
                            </div>
                        </div>
                    </div>

                    <div class=" d-flex flex-column align-items-center justify-content-center gap-2" style="width: 20%">
                        <div style="background-color: #dee2e6; width: 100px; height: 100px;">
                            <img id="previewImage" src="" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                        <input type="file" name="Image" class="form-control" style="width: 100px;" id="imageInput">
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-end gap-2 text-white">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i>
                            Add User
                        </button>
                        <button type="close" class="btn btn-danger">
                            <i class="bi bi-x"></i>
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

