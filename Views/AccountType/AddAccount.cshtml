@{
    Layout = null;
}

@model AllBlue.Models.AccountType

<!-- Add Account Modal -->
<div class="modal fade" id="addAccountModal" tabindex="-1" aria-labelledby="addAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="AccountType" asp-action="AddAccount" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAccountModalLabel">Add Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-row justify-content-between p-2">

                    <div class="d-flex flex-column gap-2 p-2 flex-grow-1">
                        <div class="form-group w-100">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control" required/>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control">
                            </textarea>
                        </div>
                    </div>

                    <div class="d-flex flex-column gap-2 p-2 flex-grow-1">
                        <label name="Menu" class="form-label">Assign default menu:</label>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="POS" id="menuPOS">
                            <label class="form-check-label" for="menuPOS">POS</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Monitoring" id="menuMonitoring">
                            <label class="form-check-label" for="menuMonitoring">Monitoring</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Report" id="menuReport">
                            <label class="form-check-label" for="menuReport">Report</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Stock/Expenses" id="menuStock">
                            <label class="form-check-label" for="menuStock">Stock/Expenses</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Item List" id="menuItemList">
                            <label class="form-check-label" for="menuItemList">Item List</label>
                        </div>
                    </div>

                    <div class="d-flex flex-column gap-2 p-2 flex-grow-1">
                        <label class="form-label text-white">Assign default menu:</label>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="System Settings" id="menuSystemSettings">
                            <label class="form-check-label" for="menuSystemSettings">System Settings</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Barangay/City" id="menuBarangayCity">
                            <label class="form-check-label" for="menuBarangayCity">Barangay/City</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Account Type" id="menuAccountType">
                            <label class="form-check-label" for="menuAccountType">Account Type</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="User Account" id="menuUserAccount">
                            <label class="form-check-label" for="menuUserAccount">User Account</label>
                        </div>

                        <div class="form-check">
                            <input name="Menu" class="form-check-input" type="checkbox" value="Backup Databases" id="menuBackupDatabases">
                            <label class="form-check-label" for="menuBackupDatabases">Backup Databases</label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex flex-row justify-content-end gap-2 text-white">
                        <button type="submit" name="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i>
                            Update
                        </button>
                        <button type="close" class="btn btn-danger">
                            <i class="bi bi-x"></i>
                            Close
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
